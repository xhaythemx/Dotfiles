function update() {
  WHITE="$(tput setaf 7)"
  CYAN="$(tput setaf 6)"
  YELLOW="$(tput setaf 3)"
  GREEN="$(tput setaf 2)"
  
  echo $CYAN'Update Started '$WHITE'at'$YELLOW $(date "+%H:%M:%S") $WHITE
  echo $CYAN'üî• Updating Homebrew... '$WHITE
    brew update
    brew upgrade
    brew cask upgrade
    brew cleanup
    brew doctor
    echo $CYAN'üî• Updating NVM... '$WHITE
    nvmup
    echo $CYAN'üî• Updating Node... '$WHITE
    nodeup
    echo $CYAN'üî• Updating NPM... '$WHITE
    npmup
    echo
    echo $GREEN'‚úÖ Evreything is Up to Date'$WHITE
    nyan
 
}

function nvmup() {
  cd ~/.nvm
  git fetch --tags origin
  git checkout `git describe --abbrev=0 --tags --match "v[0-9]*" $(git rev-list --tags --max-count=1)`
  source nvm.sh
  cd
}


function nyan() {
  RED="$(tput setaf 1)"
  GREEN="$(tput setaf 2)"
  YELLOW="$(tput setaf 3)"
  CYAN="$(tput setaf 6)"
  WHITE="$(tput setaf 7)"
  BOLD="$(tput bold)"
  NOCOLOR="$(tput sgr0)"

  echo
  echo -en $RED'-_-_-_-_-_-_-_'
  echo -e $NOCOLOR$BOLD$WHITE',------,'$NOCOLOR
  echo -en $YELLOW$WHIT'_-_-_-_-_-_-_-'
  echo -e $NOCOLOR$BOLD$WHITE'|   /\_/\\'$NOCOLOR
  echo -en $GREEN'-_-_-_-_-_-_-'
  echo -e $NOCOLOR$BOLD$WHITE'~|__( ^ .^)'$NOCOLOR
  echo -en $CYAN'-_-_-_-_-_-_-'
  echo -e $NOCOLOR$BOLD$WHITE'""  ""'$NOCOLOR
  echo

 
}



